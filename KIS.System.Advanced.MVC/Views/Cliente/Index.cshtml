@model IEnumerable<KIS.System.Advanced.MVC.ViewModels.VendedorVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Bootstrap core CSS -->
<link href="~/Content/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/produtos.css" rel="stylesheet">

<body>
    <header class="header fixed-top clearfix">
        <div class="top-nav clearfix">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-2">
                        <a data-toggle="tooltip" data-placement="bottom" title="" href="" data-original-title="Clientes">
                            <i class="icon mdi-navigation-menu"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container bkp-cont">
        <div class="theme-lockup">
            <h3 class="pad-top-20 text-center">Clientes</h3>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <div class="" id="box_configs">
                    <div>
                        <a href="#" class="btn btn-finalizar" data-toggle="modal" data-target="#novo-Cliente" data-direction="bottom" onclick="javascript: ajustaTituloModal('Novo Vendedor')">Adicionar Novo Cliente</a>
                        <nav class="navbar-light bg-light float-right">
                            <form class="form-inline">
                                <input class="form-control mr-sm-2" id="inputPesquisa" type="search" placeholder="Pesquisar por..." aria-label="Search">
                            </form>
                        </nav>
                    </div>
                    <br>
                    <table id="lista-Clientes" class=" tb-style table table-striped table-hover table-condensed dataTable display responsive nowrap" width="100%">
                        <thead>
                            <tr>
                                <th>Nome Cliente</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                       
                                <tr>
                                    <td class="tb-style" width="80%"><input type="hidden" value=""/>Adidas</td>
                                    <td class="tb-style"></td>
                                    <td class="tb-style"></td>
                                    <td class="tb-style"></td>
                                    <td><a data-toggle="modal" data-target="" data-direction="bottom" onclick="" class="btn btn-primary">Editar</a></td>
                                    <td><a onclick="" class="btn btn-danger">Excluir</a></td>
                                </tr>
                            
                    </table>
                    <div class="clearfix"></div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bottom" id="novo-Cliente" tabindex="-1" role="dialog" aria-labelledby="desativar" aria-hidden="true" novalidate="novalidate" style="display: none;">
        <div class="modal-dialog ">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Adicionar Cliente</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" onclick="javascript: resetaModal()">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="POST" id="form-Cliente" autocomplete="off" novalidate="novalidate">
                        <div class="form-group">
                            <label class="control-label" for="Nome">Nome do Cliente</label>
                            <input type="text" autocomplete="off" class="form-control" id="Nome" name="Nome" placeholder="Digite o nome do Cliente">
                            <input type="hidden" id="Id">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger float-left" data-dismiss="modal" onclick="javascript: resetaModal()">Fechar</button>
                            <button type="button" id="btnSalvarCliente" class="btn btn-finalizar" data-dismiss="modal" aria-label="Close" style="width: 70px;">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
@section scripts {
    <script type="text/javascript">
        function ajustaTituloModal(texto) {
            $(".modal-title").text(texto)
        }
    </script>
}


