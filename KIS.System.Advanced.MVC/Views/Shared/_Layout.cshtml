    <meta name="author" content="">

    <title>KIS System Advanced</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/layout.css" rel="stylesheet">

    @Scripts.Render("~/bundles/Javascript")
</head>
<body class="bg-light">
    @{
        var Nome = KIS.System.Advanced.MVC.Support.Security.SessionPersister.User.Nome;
        var Email = KIS.System.Advanced.MVC.Support.Security.SessionPersister.User.Email;
    }
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-white fixed-top shaddowbx">
        <div class="container">
            <a href="~/Home/">
                <img src="~/Content/vortech_logo.png" class="brand_logo" alt="Logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="icon-color collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active icon_espace-rig">
                        <svg width="2em" height="5em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="currentColor">
                            <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                    </li>
                    <p style="margin-top: 2rem;">@Nome</p>

                    <li class="nav-item icon_espace-lef">
                        <a href="~/Login/Deslogar">
                            <svg width="2em" height="5em" viewBox="0 0 16 16" class="bi bi-power" fill="currentColor">

                                <path fill-rule="evenodd" d="M5.578 4.437a5 5 0 1 0 4.922.044l.5-.866a6 6 0 1 1-5.908-.053l.486.875z" />
                                <path fill-rule="evenodd" d="M7.5 8V1h1v7h-1z" />
                            </svg>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="bg-primary mb-5">
    </header>

    <!-- Page Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- /.container -->
    <!-- Footer -->
    <footer class="rodapebkg rodape">
        <div class="container">
            <address class="text-right" style="float: right;">
                <abbr title="Email"></abbr>
                <a class="conteudo_dir text-black" href="mailto:vortech@gmail.com"><strong>Suporte: </strong>ovortech@gmail.com</a>
            </address>
            <p class="m-0 text-black">Copyright &copy; Vortech 2020 - Todos os direitos reservados.</p>
        </div>
        <!-- Footer -->
        <!-- /.container -->
    </footer>


    <!-- Bootstrap core JavaScript -->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @*<script src="~/Scripts/popper.js"></script>*@
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/bootbox.locales.min.js"></script>
</body>
</html>