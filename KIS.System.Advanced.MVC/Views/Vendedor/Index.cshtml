@model IEnumerable<KIS.System.Advanced.MVC.ViewModels.VendedorVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Bootstrap core CSS -->
<link href="~/Content/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/produtos.css" rel="stylesheet">

<body>
    <header class="header fixed-top clearfix">
        <div class="top-nav clearfix">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-2">
                        <a data-toggle="tooltip" data-placement="bottom" title="" href="" data-original-title="Vendedores">
                            <i class="icon mdi-navigation-menu"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container bkp-cont">
        <div class="theme-lockup">
            <h3 class="pad-top-20">Vendedores</h3>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <div class="" id="box_configs">
                    <div>
                        <a href="#" class="btn btn-success" data-toggle="modal" data-target="#novo-Vendedor" data-direction="bottom" onclick="javascript: ajustaTituloModal('Novo Vendedor')">Adicionar Novo Vendedor</a>
                        <nav class="navbar-light bg-light float-right">
                            <form class="form-inline">
                                <input class="form-control mr-sm-2" id="inputPesquisa" type="search" placeholder="Pesquisar por..." aria-label="Search">
                                @*<button class="btn btn-success my-2 my-sm-0" type="submit">Buscar</button>*@
                            </form>
                        </nav>
                    </div>

                    <br>
                    <table id="lista-Vendedores" class=" tb-style table table-striped table-hover table-condensed dataTable display responsive nowrap" width="100%">
                        <thead>
                            <tr>                                
                                <th>Nome Vendedor</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Vendedor in Model)
                            {                                
                                <tr>                                    
                                    <td class="tb-style"><input type="hidden" value="@Vendedor.Id" /> @Vendedor.Nome</td>
                                    <td class="tb-style"></td>
                                    <td><a data-toggle="modal" data-target="#novo-Vendedor" data-direction="bottom" onclick="javascript: editarVendedor(@Vendedor.Id)" class="btn btn-primary">Editar</a></td>
                                    <td><a onclick="javascript: excluirVendedor(@Vendedor.Id)" class="btn btn-danger">Excluir</a></td>
                                </tr>
                            }
                    </table>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bottom" id="novo-Vendedor" tabindex="-1" role="dialog" aria-labelledby="desativar" aria-hidden="true" novalidate="novalidate" style="display: none;">
        <div class="modal-dialog ">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" onclick="javascript: resetaModal()">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="POST" id="form-Vendedor" autocomplete="off" novalidate="novalidate">                        
                        <div class="form-group">
                            <label class="control-label" for="Nome">Nome Vendedor</label>
                            <input type="text" autocomplete="off" class="form-control" id="Nome" name="Nome" placeholder="Digite o nome do Vendedor">
                            <input type="hidden" id="Id">
                        </div>                       
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default float-left" data-dismiss="modal" onclick="javascript: resetaModal()">Fechar</button>
                            <button type="button" id="btnSalvarVendedor" class="btn btn-primary btn-primary" data-dismiss="modal" aria-label="Close">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<script>

    $("#btnSalvarVendedor").click(() => {
        let Vendedor = {
            Id: $("#Id").val(),
            Nome: $("#Nome").val(),
        };

        callActionPost("Vendedor", "Save", Vendedor, 'Vendedor/Index');
    });

    $("#inputPesquisa").on("keyup", function () {
        let value = $(this).val().toLowerCase();
        $("#lista-Vendedores tr").filter(function () {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
    });

    function editarVendedor(Id) {
        let data = { Id: `${Id}` };
        let Vendedor = callActionGet("Vendedor", "Get", data);
        
        $("#Id").val(Vendedor.Id);
        $("#Nome").val(Vendedor.Nome);

        ajustaTituloModal("Editar Vendedor");
    }

    function ajustaTituloModal(texto) {
        $(".modal-title").text(texto)
    }

    function excluirVendedor(Id) {
        bootbox.confirm("Confirma a exclusão do Vendedor?", function (confirmou) {
            if (confirmou) {
                let data = { Id: Id };
                callActionPost("Vendedor", "Delete", data, 'Vendedor/Index');
            }
        });
    }

    function resetaModal() {
        $("#Id").val('0');
        $("#Nome").val('');
    }

</script>


