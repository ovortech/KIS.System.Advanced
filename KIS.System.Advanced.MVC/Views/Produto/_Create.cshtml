@model KIS.System.Advanced.Domain.Entities.Produto

<script>
    alert(@ViewBag.nome)
</script>
<form method="POST" id="form-produto" autocomplete="off" novalidate="novalidate">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label" for="">Código</label>
                <input type="hidden" id="idProduto">
                <input type="text" autocomplete="off" value="@Model.NOME_PRODUTO" class="form-control" id="codProduto" name="" placeholder="" novalidate="novalidate">
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label" for="nomeProduto">Nome Produto</label>
        <input type="text" autocomplete="off" class="form-control" id="nomeProduto" name="nomeProduto" placeholder="Digite o nome do produto">
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label for="isServico">É um serviço?</label>
                <select class="form-control" id="isServico" name="isServico">
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label" for="valorProduto">Valor Unitário</label>
                <input type="text" autocomplete="off" class="form-control" id="valorProduto" name="valorProduto" placeholder="Digite o Valor Unitário" novalidate="novalidate">
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default float-left" data-dismiss="modal" onclick="javascript: resetaModal()">Fechar</button>
        <button type="button" id="btnSalvarProduto" class="btn btn-primary btn-primary" data-dismiss="modal" aria-label="Close">Salvar</button>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
