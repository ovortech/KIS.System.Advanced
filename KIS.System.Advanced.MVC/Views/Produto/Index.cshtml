@model IEnumerable<KIS.System.Advanced.MVC.ViewModels.ProdutoVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bootstrap core CSS -->
<link href="~/Content/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/produtos.css" rel="stylesheet">

<body>
    <header class="header fixed-top clearfix">
        <div class="top-nav clearfix">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-2">
                        <a data-toggle="tooltip" data-placement="bottom" title="" href="" data-original-title="Produtos">
                            <i class="icon mdi-navigation-menu"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container bkp-cont">
        <div class="theme-lockup">
            <h3 class="pad-top-20">Produtos</h3>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <div class="" id="box_configs">
                    <div>
                        <a href="#" class="btn btn-success" data-toggle="modal" data-target="#novo-usuario" data-direction="bottom">Adicionar Novo Produto</a>
                        <nav class="navbar-light bg-light float-right">
                            <form class="form-inline">
                                <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar por..." aria-label="Search">
                                <button class="btn btn-success my-2 my-sm-0" type="submit">Buscar</button>
                            </form>
                        </nav>
                    </div>

                    <br>
                    <table id="lista-usuarios" class=" tb-style table table-striped table-hover table-condensed dataTable display responsive nowrap" width="100%">
                        <thead >
                            <tr>
                                <th>ID</th>
                                <th>Nome Produto</th>
                                <th>Descrição</th>
                                <th>Produto Serviço</th>
                                <th>Valor Unitário</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="tb-style">101</td>
                                <td class="tb-style">Chave Carro</td>
                                <td class="tb-style">Ford KA 2016</td>
                                <td class="tb-style">Sim</td>
                                <td class="tb-style">300,00</td>
                                <td class="tb-style"></td>
                                <td><a href="#" data-target="#editar-usuario" data-toggle="modal" data-id="3" class="btn btn-primary">Editar</a></td>
                                <td><a href="#" data-target="#editar-usuario" data-toggle="modal" data-id="3" class="btn btn-danger">Excluir</a></td>
                            </tr>
                            <tr>
                                <td>210</td>
                                <td>Fechadura Completa</td>
                                <td>Porta de apto</td>
                                <td>Sim</td>
                                <td>120,00</td>
                                <td></td>
                                <td><a href="#" data-target="#editar-usuario" data-toggle="modal" data-id="3" class="btn btn-primary">Editar</a></td>
                                <td><a href="#" data-target="#editar-usuario" data-toggle="modal" data-id="3" class="btn btn-danger">Excluir</a></td>
                            </tr>
                            <tr>
                                <td>59</td>
                                <td>Chaveiro simples</td>
                                <td>Coleção Palmeiras</td>
                                <td>Não</td>
                                <td>10,00</td>
                                <td></td>
                                <td><a href="#" data-target="#editar-usuario" data-toggle="modal" data-id="3" class="btn btn-primary">Editar</a></td>
                                <td><a href="#" data-target="#editar-usuario" data-toggle="modal" data-id="3" class="btn btn-danger">Excluir</a></td>
                            </tr>

                    </table>
                    <div class="clearfix"></div>
                    <div class="form-group form-style" >
                        <select name="qtdRegistro" class="form-control" style="width: 6%;">                         
                            <option>5</option>
                            <option>10</option>
                            <option>20</option>
                            <option>30</option>
                            <option>40</option>
                            <option>50</option>
                        </select>   
                        <br>
                        <label>Exibir Registros</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bottom" id="novo-usuario" tabindex="-1" role="dialog" aria-labelledby="desativar" aria-hidden="true" novalidate="novalidate" style="display: none;">
        <div class="modal-dialog ">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Novo Produto</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="POST" id="form-usuario" autocomplete="off" novalidate="novalidate">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" for="">ID Produto</label>
                                    <input type="text" autocomplete="off" class="form-control" id="" name="" placeholder="" novalidate="novalidate">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="email">Nome Produto</label>
                            <input type="text" autocomplete="off" class="form-control" id="email" name="email" placeholder="Digite o e-mail do Usuário">
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="email">Descrição do Produto</label>
                            <input type="text" autocomplete="off" class="form-control" id="email" name="email" placeholder="Digite o e-mail do Usuário">
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Serviço</label>
                                    <select class="form-control" id="exampleFormControlSelect1">
                                        <option>Sim</option>
                                        <option>Não</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="">Valor Unitário</label>
                                    <input type="text" autocomplete="off" class="form-control" id="" name="" placeholder="Digite o Valor Unitário" novalidate="novalidate">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default float-left" data-dismiss="modal">Fechar</button>
                            <button type="submit" class="btn btn-primary btn-primary">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
