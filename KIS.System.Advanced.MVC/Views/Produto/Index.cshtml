@model IEnumerable<KIS.System.Advanced.MVC.ViewModels.ProdutoVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Bootstrap core CSS -->
<link href="~/Content/bootstrap.min.css" rel="stylesheet">
<link href="~/Content/produtos.css" rel="stylesheet">

<body>
    <header class="header fixed-top clearfix">
        <div class="top-nav clearfix">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xs-2">
                        <a data-toggle="tooltip" data-placement="bottom" title="" href="" data-original-title="Produtos">
                            <i class="icon mdi-navigation-menu"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container bkp-cont">
        <div class="theme-lockup">
            <h3 class="pad-top-20">Produtos</h3>
        </div>
        <br>
        <div class="row">
            <div class="col-md-12">
                <div class="" id="box_configs">
                    <div>
                        <a href="#" class="btn btn-success" data-toggle="modal" data-target="#novo-produto" data-direction="bottom" onclick="javascript: ajustaTituloModal('Novo Produto')">Adicionar Novo Produto</a>
                        <nav class="navbar-light bg-light float-right">
                            <form class="form-inline">
                                <input class="form-control mr-sm-2" type="search" placeholder="Pesquisar por..." aria-label="Search">
                                <button class="btn btn-success my-2 my-sm-0" type="submit">Buscar</button>
                            </form>
                        </nav>
                    </div>

                    <br>
                    <table id="lista-usuarios" class=" tb-style table table-striped table-hover table-condensed dataTable display responsive nowrap" width="100%">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Nome Produto</th>
                                <th>É um Serviço?</th>
                                <th>Valor Unitário</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var produto in Model)
                            {
                                var servico = produto.IsServico ? "Sim" : "Não";
                                <tr>
                                    <td class="tb-style">@produto.CodProduto<input type="hidden" value="@produto.IdProduto" /></td>
                                    <td class="tb-style">@produto.NomeProduto</td>
                                    <td class="tb-style">@servico</td>
                                    <td class="tb-style">@produto.ValorProduto</td>
                                    <td class="tb-style"></td>
                                    <td><a data-toggle="modal" data-target="#novo-produto" data-direction="bottom" onclick="javascript: edit(@produto.IdProduto)" class="btn btn-primary">Editar</a></td>
                                    <td><a onclick="javascript: exclude(@produto.IdProduto)" class="btn btn-danger">Excluir</a></td>
                                </tr>
                            }
                    </table>
                    <div class="clearfix"></div>
                    @*<div class="form-group form-style">
                        <select name="qtdRegistro" class="form-control" style="width: 6%;">
                            <option>5</option>
                            <option>10</option>
                            <option>20</option>
                            <option>30</option>
                            <option>40</option>
                            <option>50</option>
                        </select>
                        <br>
                        <label>Exibir Registros</label>
                    </div>*@
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade bottom" id="novo-produto" tabindex="-1" role="dialog" aria-labelledby="desativar" aria-hidden="true" novalidate="novalidate" style="display: none;">
        <div class="modal-dialog ">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" onclick="javascript: resetaModal()">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="POST" id="form-usuario" autocomplete="off" novalidate="novalidate">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" for="">Código</label>
                                    <input type="hidden" id="idProduto">
                                    <input type="text" autocomplete="off" class="form-control" id="codProduto" name="" placeholder="" novalidate="novalidate">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="nomeProduto">Nome Produto</label>
                            <input type="text" autocomplete="off" class="form-control" id="nomeProduto" name="nomeProduto" placeholder="Digite o nome do produto">
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="isServico">É um serviço?</label>
                                    <select class="form-control" id="isServico" name="isServico">
                                        <option value="true">Sim</option>
                                        <option value="false">Não</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="valorProduto">Valor Unitário</label>
                                    <input type="text" autocomplete="off" class="form-control" id="valorProduto" name="valorProduto" placeholder="Digite o Valor Unitário" novalidate="novalidate">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default float-left" data-dismiss="modal" onclick="javascript: resetaModal()">Fechar</button>
                            <button type="button" id="btnSalvarProduto" class="btn btn-primary btn-primary" data-dismiss="modal" aria-label="Close">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<script>

    $("#btnSalvarProduto").click(() => {
        let produto = {
            IdProduto: $("#idProduto").val(),
            CodProduto: $("#codProduto").val(),
            NomeProduto: $("#nomeProduto").val(),
            IsServico: $("#isServico").val(),
            ValorProduto: $("#valorProduto").val()
        };

        callActionPost("Produto", "Save", produto, 'Index');
    });

    function edit(idProduto) {
        let data = { idProduto: `${idProduto}` };
        let produto = callActionGet("Produto", "Get", data);

        $("#idProduto").val(produto.IdProduto);
        $("#codProduto").val(produto.CodProduto);
        $("#nomeProduto").val(produto.NomeProduto);
        $("#isServico").val(String(produto.IsServico));
        $("#valorProduto").val(produto.ValorProduto);

        ajustaTituloModal("Editar Produto");
    }

    function ajustaTituloModal(texto) {
        $(".modal-title").text(texto)
    }

    function exclude(idProduto) {
        bootbox.confirm("Confirma a exclusão do produto?", function (confirmou) {
            if (confirmou) {
                let data = { idProduto: idProduto };
                callActionPost("Produto", "Delete", data, 'Index');
            }
        });
    }

    function resetaModal() {
        $("#idProduto").val('0');
        $("#codProduto").val('');
        $("#nomeProduto").val('');
        $("#isServico").val('true');
        $("#valorProduto").val('')
    }
</script>
